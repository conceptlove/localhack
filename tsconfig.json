{
  "compilerOptions": {
    "noEmit": true,
    "strictNullChecks": true,
    "allowJs": true,
    // "checkJs": true,
    "lib": ["ES2019", "dom", "es2015"],
    "target": "es2017",
    "module": "es2020",
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "h",
    "outDir": ".hack/tsc",
    "plugins": [{ "name": "typescript-lit-html-plugin" }]
  },
  "compileOnSave": false,
  "include": ["src"],
  "exclude": ["**/local.*", "**/*.local.*"]
}
