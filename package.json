{
  "name": "localhack",
  "version": "0.1.0",
  "description": "Build sharable tools quickly without servers.",
  "author": "Jeff Peterson <jeff@yak.sh>",
  "license": "MIT",
  "main": "build/apps/ui/main.js",
  "bin": {
    "localhack": "src/entries/cli.mjs"
  },
  "scripts": {
    "start-flow": "electron .",
    "test": "NODE_ENV=test node",
    "cli": "node src/entries/cli.mjs",
    "build": "yarn build:copy && yarn build:ts",
    "build:ts": "tsc",
    "build:copy": "copyfiles --verbose --up 1 'src/**/*.html' build",
    "start": "electron build/entries/main.js"
  },
  "repository": "https://github.com/conceptlove/localhack",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "devDependencies": {
    "ts-node": "^9.0.0"
  },
  "dependencies": {
    "@funkia/hareactive": "^0.4.0",
    "@types/react": "^16.9.56",
    "@types/uuid": "^8.3.0",
    "copyfiles": "^2.4.0",
    "electron": "11.0.0-beta.22",
    "fast-glob": "^3.2.4",
    "immer": "^7.0.9",
    "lit-html": "^1.3.0",
    "react": "^17.0.1",
    "typescript": "^4.1.0-beta",
    "typescript-lit-html-plugin": "^0.9.0",
    "uuid": "^8.3.1",
    "yaml": "^1.10.0"
  }
}
