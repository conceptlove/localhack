{
  "private": true,
  "name": "localhack",
  "workspaces": [
    "src/vscode"
  ],
  "version": "0.1.0",
  "description": "Build sharable tools quickly without servers.",
  "author": "Jeff Peterson <jeff@yak.sh>",
  "license": "MIT",
  "main": "dist/entries/cli.mjs",
  "bin": {
    "localhack": "dist/cli.mjs"
  },
  "exports": {
    ".": "./dist/index.mjs",
    "./*": "./dist/*.mjs"
  },
  "scripts": {
    "clean": "rm -r .localhack/build/*",
    "test": "NODE_ENV=test node .localhack/build/entries/cli.mjs test",
    "cli": "node .localhack/build/entries/cli.mjs",
    "build": "yarn cli build",
    "watch": "yarn cli watch",
    "dist": "yarn cli dist"
  },
  "repository": "https://github.com/conceptlove/localhack",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "devDependencies": {
    "ts-node": "^9.0.0"
  },
  "dependencies": {
    "@funkia/hareactive": "^0.4.0",
    "@types/react": "^16.9.56",
    "@types/uuid": "^8.3.0",
    "chalk": "^4.1.0",
    "copyfiles": "^2.4.0",
    "electron": "11.0.0-beta.22",
    "esbuild": "^0.8.17",
    "fast-glob": "^3.2.4",
    "immer": "^7.0.9",
    "lit-html": "^1.3.0",
    "markdown-it": "^12.0.2",
    "react": "^17.0.1",
    "typescript": "^4.1.0-beta",
    "typescript-lit-html-plugin": "^0.9.0",
    "uuid": "^8.3.1",
    "yaml": "^1.10.0"
  }
}
